<!DOCTYPE html>
<html>

<head>
    <title>Administrator</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/script.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</head>
<header>
    <%- include('../partials/admin-Header'); %>
</header>

<body>

    <section>
        <div class="row">
            <div class="col-md-6 m-auto">
                <div class="container mt-5 pl-5">
                    <h2>Administrator</h2>
                    <br>
                    <br>

                    <form name="loginform" method="POST" action="/admin/login" onsubmit="return valForm()">
                        <%if (loginErr) { %>

                            <div class="alert alert-danger">
                                <strong> Incorrect Username or Password</strong>
                            </div>

                            <% } %>
                                <div style="width: 20rem;">
                                    <img class="card-img-top" src="/images/admin.png" alt="" style="width:100px;height:100px;">
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col col-md-6">
                                        <input name="username" type="text" placeholder="Administrator Username" class="form-control" required>
                                    </div>
                                </div>
                                <br>
                                <br>
                                <div class="row">
                                    <div class="col col-md-6">
                                        <input name="password" type="password" placeholder="Administrator Password" class="form-control" required>
                                    </div>
                                </div>
                                <br>
                                <br>

                                <button type="submit" class="btn btn-primary">Login</button>

                    </form>
                </div>
            </div>
        </div>
    </section>

</body>

</html>

<script>
    function valForm() {
        console.log("Validating Form");
        return true;
    }
</script>