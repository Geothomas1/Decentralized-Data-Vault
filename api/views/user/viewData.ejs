<!DOCTYPE html>
<html>

<head>
    <title>Data Vault</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/script.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</head>
<header>
    <%- include('../partials/user-Homeheader'); %>
</header>

<body>

    <section>
        <div class="row">
            <div class="col-md-6 m-auto">
                <div class="container mt-5 pl-5">
                    <h2>Institution Data View</h2>
                    <br>
                    <br>

                    <form name="addDataform" method="POST" action="/user/addData" onsubmit="return valForm()">
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="username" type="text" value="<%= username %>" class="form-control" required readonly>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="name" type="text" value="<%= data.name %>" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="address" type="text" value="<%= data.address %>" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="city" type="text" value="<%= data.city %>" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="district" type="text" value="<%= data.district %>" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="state" type="text" value="<%= data.state %>" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="email" type="email" value="<%= data.email %>" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="phone" type="phone" value="<%= data.phone %>" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="dob" type="text" value="<%= data.dob %>" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

</body>

</html>

<script>
    function valForm() {
        console.log("Validating Form");
        return true;
    }
</script>