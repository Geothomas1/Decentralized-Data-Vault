<!DOCTYPE html>
<html>

<head>
    <title>Data Vault</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/script.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

</head>
<header>
    <%- include('../partials/user-Homeheader'); %>
</header>

<body>

    <section>
        <div class="row">
            <div class="col-md-6 m-auto">
                <div class="container mt-5 pl-5">
                    <h2>Add Data to Datavault Network </h2>
                    <br>
                    <br>

                    <form name="addDataform" method="POST" action="/addData" onsubmit="return valForm()">
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="username" type="text" placeholder="Username" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="phone" type="phone" placeholder="Phone" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col col-md-6">
                                <input name="email" type="email" placeholder="Email" class="form-control" required>
                            </div>
                        </div>
                        <br>
                        <br>
                        <input type="hidden" name="fcn" id="fcn" value="createUser">
                        <input type="hidden" name="chaincodeName" id="chaincodeName" value="user">
                        <input type="hidden" name="channelName" id="channelName" value="mychannel">
                        <input type="hidden" name="peer0" id="peer0" value="peer0.org1.example.com">
                        <input type="hidden" name="peer1" id="peer1" value="peer0.org2.example.com">
                        <input type="hidden" name="orgName" id="orgName" value="Org1">

                        <button type="submit" class="btn btn-primary">Add</button>

                    </form>
                </div>
            </div>
        </div>
    </section>

</body>

</html>

<script>
    function valForm() {
        console.log("Validating Form");
        return true;
    }
</script>